{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"lineWidth": 2
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"indentWidth": 2,
			"quoteProperties": "asNeeded",
			"attributePosition": "auto",
			"bracketSpacing": true,
			"jsxQuoteStyle": "single",
			"indentStyle": "space",
			"lineEnding": "lf",
			"lineWidth": 120,
			"bracketSameLine": true,
			"trailingCommas": "none"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
